<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:gravity="center_horizontal"
    android:id="@+id/layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps"
        android:id="@+id/titleText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/Base.TextAppearance.AppCompat.Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SpotifyStreamer"
        android:id="@+id/spotifyStreamerButton"
        android:height="20dp"
        android:textColor="@android:color/white"
        android:elevation="@dimen/abc_dropdownitem_icon_width"
        android:elegantTextHeight="true"
        android:clickable="true"
        android:ellipsize="middle"
        android:onClick="sendSpotifyMessage"
        android:background="#ffff831a"
        android:minWidth="250dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/titleText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score App"
        android:id="@+id/scoreAppButton"
        android:height="20dp"
        android:textColor="@android:color/white"
        android:elevation="@dimen/abc_dropdownitem_icon_width"
        android:elegantTextHeight="true"
        android:clickable="true"
        style="@style/Base.TextAppearance.AppCompat.Menu"
        android:ellipsize="middle"
        android:onClick="sendScoreMessage"
        android:background="#ffff831a"
        android:minWidth="250dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spotifyStreamerButton"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/Base.TextAppearance.AppCompat.Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/libraryAppButton"
        android:height="20dp"
        android:textColor="@android:color/white"
        android:elevation="@dimen/abc_dropdownitem_icon_width"
        android:elegantTextHeight="true"
        android:clickable="true"
        android:ellipsize="middle"
        android:onClick="sendLibraryMessage"
        android:background="#ffff831a"
        android:minWidth="250dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/scoreAppButton"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/Base.TextAppearance.AppCompat.Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build it Bigger"
        android:id="@+id/biggerButton"
        android:height="20dp"
        android:textColor="@android:color/white"
        android:elevation="@dimen/abc_dropdownitem_icon_width"
        android:elegantTextHeight="true"
        android:clickable="true"
        android:ellipsize="middle"
        android:onClick="sendBuildMessage"
        android:background="#ffff831a"
        android:minWidth="250dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/libraryAppButton"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/Base.TextAppearance.AppCompat.Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/xyzReaderButton"
        android:height="20dp"
        android:textColor="@android:color/white"
        android:elevation="@dimen/abc_dropdownitem_icon_width"
        android:elegantTextHeight="true"
        android:clickable="true"
        android:ellipsize="middle"
        android:onClick="sendXYZMessage"
        android:background="#ffff831a"
        android:minWidth="250dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/biggerButton"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/Base.TextAppearance.AppCompat.Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone: My Own App"
        android:id="@+id/capstoneButton"
        android:height="20dp"
        android:textColor="@android:color/white"
        android:elevation="@dimen/abc_dropdownitem_icon_width"
        android:elegantTextHeight="true"
        android:clickable="true"
        android:ellipsize="middle"
        android:onClick="sendCapstoneMessage"
        android:background="#ff000000"
        android:minWidth="250dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/xyzReaderButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
